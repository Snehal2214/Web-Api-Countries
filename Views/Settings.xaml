<UserControl
    x:Class="BaseApp.Views.Settings"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:BaseApp.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="850"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <UserControl.Resources>
        <Style x:Key="radiobtn" TargetType="{x:Type RadioButton}">
            <Setter Property="SnapsToDevicePixels" Value="true" />
            <Setter Property="OverridesDefaultStyle" Value="true" />
            <Setter Property="Margin" Value="5" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type RadioButton}">
                        <BulletDecorator VerticalAlignment="Center" Background="Transparent">
                            <BulletDecorator.Bullet>
                                <Grid Width="15" Height="15">
                                    <Rectangle
                                        x:Name="Border"
                                        RadiusX="2"
                                        RadiusY="2"
                                        StrokeThickness="1" />
                                    <Polygon
                                        x:Name="CheckMark"
                                        Points="7,15 5,10 0,7 5,5 8,0 10,5 15,8 10,10 7,15"
                                        Visibility="Visible" />
                                    <!--  2,9 7,14 14,2 10,3 7,13 4,8 2,9  -->
                                    <!--  7,14 0,7 7,0 14,7 7,14  -->
                                </Grid>
                            </BulletDecorator.Bullet>
                            <ContentPresenter
                                Margin="4,0,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                RecognizesAccessKey="True"
                                TextBlock.FontSize="14"
                                TextBlock.FontWeight="SemiBold" />
                        </BulletDecorator>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="CheckMark" Property="Fill" Value="Purple" />
                                <Setter TargetName="Border" Property="Stroke" Value="Gold" />

                            </Trigger>
                            <Trigger Property="IsChecked" Value="False">
                                <Setter TargetName="CheckMark" Property="Fill" Value="TransParent" />
                                <Setter TargetName="Border" Property="Stroke" Value="#C6C6C6" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="CheckBox">
            <Setter Property="FontSize" Value="16" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="MinWidth" Value="20" />
            <Setter Property="Margin" Value="15,0,0,0" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Content" Value="" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type CheckBox}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="24" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="24" />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <Border
                                Width="20"
                                Height="20"
                                VerticalAlignment="Center"
                                Background="White"
                                BorderBrush="#C6C6C6"
                                BorderThickness="1"
                                CornerRadius="5">
                                <Grid>
                                    <Polygon
                                        x:Name="ManualShape"
                                        Grid.Column="0"
                                        Margin="2"
                                        Fill="#aeaeae"
                                        Points="0,14 1,0 4,1 4,5 10,5 10,1 13,0 14,14 10,14 10,9 4,9 4,14 0,14" />
                                </Grid>
                            </Border>
                            <ContentPresenter
                                x:Name="content"
                                Grid.Column="1"
                                Margin="5,0,0,5"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center" />
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="ManualShape" Property="Fill" Value="Purple" />
                                <Setter Property="Content" Value="Header Enable" />

                            </Trigger>
                            <Trigger Property="IsChecked" Value="False">
                                <Setter TargetName="ManualShape" Property="Fill" Value="#aeaeae" />
                                <Setter Property="Content" Value="Header Disable" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    <Grid
        Grid.Row="0"
        Grid.Column="1"
        Background="#ecf0f5">
        <StackPanel Orientation="Vertical">
            <Border Height="50" Background="#222d32">
                <DockPanel HorizontalAlignment="Stretch" LastChildFill="False">
                    <Button
                        Margin="10,0,0,0"
                        DockPanel.Dock="Left"
                        Style="{DynamicResource TransparentButton}">
                        <Button.Content>
                            <StackPanel
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Orientation="Horizontal">
                                <TextBlock
                                    Margin="5,0,5,0"
                                    HorizontalAlignment="Left"
                                    FontSize="14"
                                    Style="{DynamicResource FontAwesome}"
                                    Text="&#xf013;" />
                            </StackPanel>
                        </Button.Content>
                    </Button>
                    <TextBlock
                        VerticalAlignment="Center"
                        DockPanel.Dock="Left"
                        FontSize="16"
                        Foreground="#fff"
                        Text="Manage Settings" />
                </DockPanel>
            </Border>
            <Border
                Padding="15"
                VerticalAlignment="Stretch"
                Background="#ecf0f5">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="50*" />
                        <ColumnDefinition Width="50*" />
                    </Grid.ColumnDefinitions>
                    <Grid
                        Grid.Row="0"
                        Grid.Column="0"
                        MinWidth="350">
                        <Border
                            Margin="0"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Top"
                            Background="#fff"
                            BorderBrush="#3c8dbc"
                            BorderThickness="0,3,0,0">
                            <StackPanel Orientation="Vertical">
                                <Border
                                    Padding="10"
                                    BorderBrush="#f4f4f4"
                                    BorderThickness="0,0,0,1">
                                    <TextBlock
                                        FontSize="18"
                                        FontWeight="SemiBold"
                                        LineHeight="1"
                                        Text="Printer Setup" />
                                </Border>
                                <Border BorderThickness="10">
                                    <StackPanel Orientation="Vertical">
                                        <Border BorderThickness="0,0,0,15">
                                            <StackPanel Orientation="Vertical">
                                                <TextBlock
                                                    Margin="0,0,0,5"
                                                    FontSize="14"
                                                    FontWeight="SemiBold"
                                                    Text="Printer IP address" />
                                                <TextBox
                                                    Height="34"
                                                    Padding="12,6,0,6"
                                                    HorizontalAlignment="Stretch"
                                                    FontSize="14"
                                                    Text="{Binding IpAddress, Mode=TwoWay}" />
                                                <!--<TextBlock Text="Printer port" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,5"/>
                                                <TextBox Padding="12,6,0,6" Text="{Binding SavedSetting.PrinterPort, Mode=TwoWay}" Height="34" FontSize="14" HorizontalAlignment="Stretch"/>-->
                                            </StackPanel>
                                        </Border>
                                        
                                    </StackPanel>
                                </Border>
                            </StackPanel>
                        </Border>
                    </Grid>
                    <Grid
                        Grid.Row="0"
                        Grid.Column="1"
                        MinWidth="350"
                        Background="#fff">
                        <Border
                            Margin="0"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Top"
                            Background="#fff"
                            BorderBrush="#3c8dbc"
                            BorderThickness="0,3,0,0">
                            <StackPanel Orientation="Vertical">
                                <!--<Border
                                    Padding="10"
                                    BorderBrush="#f4f4f4"
                                    BorderThickness="0,0,0,1">
                                    <TextBlock
                                        FontSize="18"
                                        FontWeight="SemiBold"
                                        LineHeight="1"
                                        Text="Folder Setup" />
                                </Border>-->
                                <Border BorderThickness="10">
                                    <StackPanel Orientation="Vertical">
                                        <Border BorderThickness="0,0,0,15">
                                            <StackPanel Orientation="Vertical">
                                                <TextBlock Text="Printer port" FontSize="14" FontWeight="SemiBold" Margin="0,45,0,5"/>
                                                <TextBox Padding="12,6,0,6" Text="{Binding Port, Mode=TwoWay}" Height="34" FontSize="14" HorizontalAlignment="Stretch"/>
                                                
                                            </StackPanel>
                                        </Border>
                                    </StackPanel>
                                </Border>
                            </StackPanel>
                        </Border>
                    </Grid>
                    <Border
                        Grid.Row="1"
                        Grid.ColumnSpan="2"
                        Background="#fff"
                        BorderThickness="0,0,0,0">
                        <DockPanel HorizontalAlignment="Stretch" LastChildFill="False">
                            <!--<CheckBox Margin="5" IsChecked="{Binding SavedSetting.Header, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />-->
                            <!--<RadioButton GroupName="File" Content="csv" IsChecked="{Binding SavedSetting.Fileextn, Converter={StaticResource ResourceKey=FileConverterKey}, ConverterParameter=csv}" Style="{StaticResource radiobtn}"/>
                            <RadioButton GroupName="File" Content="xlsx" IsChecked="{Binding SavedSetting.Fileextn, Converter={StaticResource ResourceKey=FileConverterKey}, ConverterParameter=xlsx}" Style="{StaticResource radiobtn}"/>-->
                            <Button
                                Margin="5"
                                HorizontalAlignment="Right"
                                BorderThickness="0"
                                Command="{Binding SaveCommand}"
                                Content="Save"
                                DockPanel.Dock="Right"
                                Style="{StaticResource NormalButton}" />
                        </DockPanel>
                    </Border>
                </Grid>
            </Border>
        </StackPanel>
    </Grid>
</UserControl>
